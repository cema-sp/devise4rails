<%= notice %>
<%= alert %>

<h1>Listing users</h1>

<table class="users">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_registration_path %></td>
        <% if cannot?(:destroy, user) %>
          <td>
            <%= link_to 'Destroy', user_registration_path, method: :delete, 
              data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
