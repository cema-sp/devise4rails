<%= notice %>
<%= alert %>

<h1>Listing posts</h1>

<table class="posts">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Context</th>
      <th>Restricted</th>
      <th>Collabs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.username %></td>
        <td><%= post.title %></td>
        <td><%= post.context %></td>
        <td><%= post.restricted.to_s %></td>
        <td><%= post.collaborations.map(&:user).map(&:username).join(', ') %></td>
        <td><%= link_to 'Show', post %></td>
        <% if can?(:edit, post) %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <% end %>
        <% if can?(:destroy, post) %>
          <td>
            <%= link_to 'Destroy', post, method: :delete, 
              data: { confirm: 'Are you sure?' } %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
